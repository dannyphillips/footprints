{
  "name": "footprints",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "husky": "0.14.3",
    "jsonlint": "1.6.2",
    "lerna": "2.5.1",
    "lerna-changelog": "0.7.0",
    "lint-staged": "6.1.1",
    "prettier": "1.9.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean",
    "changelog": "lerna-changelog",
    "precommit": "lint-staged",
    "start": "lerna run start",
    "test": "echo 'it worked'"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ],
    "*.json": "jsonlint",
    ".*rc": "jsonlint"
  }
}
